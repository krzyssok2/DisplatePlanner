@inherits LayoutComponentBase

<svg xmlns="http://www.w3.org/2000/svg"
     width="@Size" height="@Size"
     fill="none" stroke="currentColor"
     stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
     viewBox="0 0 24 24"
     style="transform: rotate(@RotationDegrees); transform-origin: center;">
    <line x1="5" y1="12" x2="19" y2="12" />
    <polyline points="15 9 19 12 15 15 15 9" />
</svg>

@code {
    [Parameter] public string Direction { get; set; } = "right"; // Options: right, left, up, down
    [Parameter] public int Size { get; set; } = 24;

    private string RotationDegrees => Direction switch
    {
        "up" => "-90deg",
        "down" => "90deg",
        "left" => "180deg",
        _ => "0deg" // default is right
    };
}